                        <label id="label-lock-user" class="custom-control-label" for="customSwitch3"></label>
                        <i id="user-info" class="fa fa-info-circle" aria-hidden="true"></i>
                        <i id="delete-user" class="fa fa-trash" aria-hidden="true"></i>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
        </div>
        <div class="card-footer clearfix">
        <ul class="pagination pagination-sm m-0 float-right">
            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
